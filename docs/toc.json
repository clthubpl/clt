function generateToc(lang) {
  // Lang keys
  const name = {pl:"nazwa", en:"nazwa_en", de:"nazwa_de"};
  const cat = {pl:"kategoria", en:"kategoria_en", de:"kategoria_de"};
  let out = "";
  tocData.forEach(section => {
    out += `<div style="font-weight:bold;font-size:1.1em;margin:1em 0 0.3em 0;">${section[cat[lang]]}</div><ul style="margin:0 0 0.6em 0.8em;padding:0;">`;
    section.kalkulatory.forEach(kalk => {
      // Główna pozycja kalkulatora
      out += `<li style="margin-bottom:0.25em;">
        <a href="#" class="kalk-link" data-url="${kalk.link}" title="${kalk[opisKey(lang)]}">${kalk[name[lang]]}</a>`;
      // Podsekcje (np. instrukcje, FAQ)
      if (kalk.podsekcje && kalk.podsekcje.length > 0) {
        out += `<ul style="margin:0.12em 0 0.3em 1.3em;padding:0;">`;
        kalk.podsekcje.forEach(pod => {
          out += `<li style="margin-bottom:0.11em;">
            <a href="#" class="kalk-link" data-url="${pod.link}" title="">${pod[name[lang]]}</a>
          </li>`;
        });
        out += `</ul>`;
      }
      out += `</li>`;
    });
    out += `</ul>`;
  });
  return out;
}
function opisKey(lang) {
  return {pl:"opis",en:"opis_en",de:"opis_de"}[lang];
}

// Zamiast starego generowania TOC:
function setLang(lang) {
  currentLang = lang;
  document.getElementById("mailTitle").innerText = translations[lang].mailTitle;
  document.getElementById("basicTitle").innerText = translations[lang].basicTitle;
  document.getElementById("basicDesc").innerText = translations[lang].basicDesc;
  document.getElementById("regulamin").innerHTML = translations[lang].regulamin;
  document.getElementById("toc-header").innerText = translations[lang].tocHeader;
  document.getElementById("toc-list").innerHTML = generateToc(lang);
  document.getElementById("adText").innerText = translations[lang].adText;
  document.getElementById("mailIcon").title = translations[lang].mailTitle;
  // Ukryj kalkulator po zmianie języka
  document.getElementById('kalkulator-box').style.display = "none";
  document.getElementById('kalkulator-box').innerHTML = "";
}
